PREFIX dcterms: <http://purl.org/dc/terms/>
PREFIX dpv: <https://w3id.org/dpv#>
PREFIX dpv-odrl: <https://w3id.org/dpv/mappings/odrl#>
PREFIX odrl: <http://www.w3.org/ns/odrl/2/>
PREFIX p7012: <https://w3id.org/dpv/standards/p7012#>

PREFIX ex: <http://example.org/>

ex:PDC-TPR a odrl:Set ;
    odrl:uid ex:PDC-TPR ;
    odrl:profile <https://w3id.org/dpv/mappings/odrl> ;
    dcterms:title "PDC-TPR"@en ;
    dcterms:description "Term that allows the sharing of contact data for communication purposes."@en ;
    odrl:conflict odrl:perm ;
    # sharing contact data for communication purposes is permitted
    odrl:permission [
        odrl:action dpv-odrl:Share ;
        odrl:target dpv-odrl:Contact ;
        odrl:assigner p7012:Person ;
        odrl:assignee p7012:Entity ;
        odrl:constraint [
            odrl:leftOperand dpv-odrl:Purpose ;
            odrl:operator odrl:eq ;
            odrl:rightOperand dpv:CommunicationManagement
        ]
    ] ;
    # sharing with third party is prohibited
    odrl:prohibition [
        odrl:action dpv-odrl:Share ;
        odrl:target dpv-odrl:PersonalData ;
        odrl:assigner p7012:Person ;
        odrl:assignee p7012:ThirdParty ;
    ] .